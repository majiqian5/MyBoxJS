{
  "id": "caiyun-weather.sub",
  "name": "彩云天气订阅",
  "author": "@majiqian5",
  "icon": "https://raw.githubusercontent.com/58xinian/icon/master/Weather/CLOUDY.png",
  "repo": "https://github.com/majiqian5/MyBoxJS",
  "apps": [
    {
      "id": "CaiyunWeather",
      "name": "彩云天气",
      "keys": [
        "@caiyun.token.caiyun",
        "@caiyun.token.tencent",
        "@caiyun.tts.enabled",
        "@caiyun.tts.speed",
        "@caiyun.tts.schedule_start",
        "@caiyun.tts.schedule_end",
        "@caiyun.minutely.enabled",
        "@caiyun.display_location"
      ],
      "settings": [
        {
          "id": "@caiyun.token.caiyun",
          "name": "彩云天气API Token",
          "val": "",
          "type": "text",
          "desc": "获取地址：https://t.me/cool_scripts"
        },
        {
          "id": "@caiyun.token.tencent",
          "name": "腾讯地图API Token（可选）",
          "val": "",
          "type": "text",
          "desc": "用于获取详细地址信息"
        },
        {
          "id": "@caiyun.tts.enabled",
          "name": "启用TTS语音播报",
          "val": true,
          "type": "boolean",
          "desc": "是否启用语音播报天气"
        },
        {
          "id": "@caiyun.tts.speed",
          "name": "语音播报速度",
          "val": 0.6,
          "type": "number",
          "desc": "0.1-2.0，默认0.6"
        },
        {
          "id": "@caiyun.tts.schedule_start",
          "name": "播报开始时间",
          "val": 8,
          "type": "number",
          "desc": "开始播报的小时（0-23）"
        },
        {
          "id": "@caiyun.tts.schedule_end",
          "name": "播报结束时间",
          "val": 22,
          "type": "number",
          "desc": "结束播报的小时（0-23）"
        },
        {
          "id": "@caiyun.minutely.enabled",
          "name": "启用分钟级天气",
          "val": true,
          "type": "boolean",
          "desc": "显示分钟级降水预报"
        },
        {
          "id": "@caiyun.display_location",
          "name": "显示位置信息",
          "val": false,
          "type": "boolean",
          "desc": "在日志中显示位置信息"
        }
      ],
      "author": "@majiqian5",
      "repo": "https://github.com/majiqian5/MyBoxJS",
      "icons": [
        "https://raw.githubusercontent.com/58xinian/icon/master/Weather/CLOUDY_mini.png",
        "https://raw.githubusercontent.com/58xinian/icon/master/Weather/CLOUDY.png"
      ],
      "script": "https://raw.githubusercontent.com/majiqian5/MyBoxJS/main/Tasks/caiyun.js"
    }
  ]
}
