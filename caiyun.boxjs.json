{
  "caiyun": {
    "title": "彩云天气",
    "icon": "cloud.rain",
    "tintColor": "#FF9800",
    "description": "彩云天气API配置，支持分钟级降水和TTS语音播报",
    "author": "Peng-YM & majiqian5",
    "version": "0.7",
    "settings": [
      {
        "key": "token",
        "title": "API令牌配置",
        "description": "请填写您的API令牌，彩云Token必须，腾讯Token可选",
        "type": "group",
        "items": [
          {
            "key": "caiyun",
            "title": "彩云天气令牌",
            "description": "获取地址：https://t.me/cool_scripts",
            "placeholder": "请输入彩云天气API令牌",
            "type": "text",
            "required": true
          },
          {
            "key": "tencent",
            "title": "腾讯地图令牌（可选）",
            "description": "用于获取详细地址信息，可留空",
            "placeholder": "请输入腾讯地图API Key",
            "type": "text",
            "required": false
          }
        ]
      },
      {
        "key": "tts_config",
        "title": "语音播报设置",
        "type": "group",
        "items": [
          {
            "key": "tts_enabled",
            "title": "启用语音播报",
            "description": "是否启用TTS语音播报天气",
            "type": "boolean",
            "default": true
          },
          {
            "key": "tts_speed",
            "title": "播报语速",
            "description": "语音播报速度（0.1-2.0），默认0.6",
            "type": "number",
            "min": 0.1,
            "max": 2.0,
            "step": 0.1,
            "default": 0.6
          },
          {
            "key": "tts_schedule_enabled",
            "title": "启用时间段限制",
            "description": "只在指定时间段内播报，避免夜间打扰",
            "type": "boolean",
            "default": true
          },
          {
            "key": "tts_schedule_start",
            "title": "开始时间（小时）",
            "description": "语音播报开始时间（0-23）",
            "type": "number",
            "min": 0,
            "max": 23,
            "default": 8
          },
          {
            "key": "tts_schedule_end",
            "title": "结束时间（小时）",
            "description": "语音播报结束时间（0-23）",
            "type": "number",
            "min": 0,
            "max": 23,
            "default": 22
          }
        ]
      },
      {
        "key": "weather_config",
        "title": "天气功能设置",
        "type": "group",
        "items": [
          {
            "key": "minutely_enabled",
            "title": "启用分钟级天气",
            "description": "显示分钟级降水预报",
            "type": "boolean",
            "default": true
          },
          {
            "key": "display_location",
            "title": "显示位置信息",
            "description": "在日志中显示详细位置信息",
            "type": "boolean",
            "default": false
          },
          {
            "key": "update_frequency",
            "title": "更新频率",
            "description": "天气数据更新间隔",
            "type": "select",
            "options": [
              { "title": "每1小时", "value": "1" },
              { "title": "每2小时", "value": "2" },
              { "title": "每3小时", "value": "3" },
              { "title": "每4小时", "value": "4" },
              { "title": "每6小时", "value": "6" }
            ],
            "default": "2"
          },
          {
            "key": "alert_notification",
            "title": "天气预警通知",
            "description": "接收天气预警通知",
            "type": "boolean",
            "default": true
          }
        ]
      },
      {
        "key": "display_config",
        "title": "显示设置",
        "type": "group",
        "items": [
          {
            "key": "temperature_unit",
            "title": "温度单位",
            "type": "select",
            "options": [
              { "title": "摄氏度 (°C)", "value": "celsius" },
              { "title": "华氏度 (°F)", "value": "fahrenheit" }
            ],
            "default": "celsius"
          },
          {
            "key": "show_lunar",
            "title": "显示农历",
            "description": "在通知中显示农历日期",
            "type": "boolean",
            "default": true
          },
          {
            "key": "show_icons",
            "title": "显示天气图标",
            "description": "在通知中显示天气图标",
            "type": "boolean",
            "default": true
          },
          {
            "key": "notification_sound",
            "title": "通知提示音",
            "description": "天气通知的提示音",
            "type": "select",
            "options": [
              { "title": "默认", "value": "default" },
              { "title": "水滴", "value": "drop" },
              { "title": "铃铛", "value": "bell" },
              { "title": "无", "value": "none" }
            ],
            "default": "default"
          }
        ]
      }
    ]
  }
}
