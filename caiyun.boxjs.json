{
  "caiyun": {
    "title": "彩云天气",
    "icon": "cloud.rain",
    "tintColor": "#FF9800",
    "description": "彩云天气配置，支持TTS语音播报",
    "settings": [
      {
        "key": "caiyun_token",
        "title": "彩云天气令牌",
        "description": "从 https://t.me/cool_scripts 获取",
        "type": "text",
        "default": "",
        "required": true
      },
      {
        "key": "tencent_token",
        "title": "腾讯地图令牌",
        "description": "用于获取详细地址（可选）",
        "type": "text",
        "default": "",
        "required": false
      },
      {
        "key": "tts_enabled",
        "title": "启用TTS语音播报",
        "description": "是否启用语音播报天气",
        "type": "boolean",
        "default": true,
        "required": false
      },
      {
        "key": "tts_speed",
        "title": "语音播报速度",
        "description": "0.1-2.0之间，默认0.6",
