        "default": 8,
        "min": 0,
        "max": 23,
        "required": false
      },
      {
        "key": "tts_end_hour",
        "title": "播报结束时间",
        "description": "结束播报的小时（0-23）",
        "type": "number",
        "default": 22,
        "min": 0,
        "max": 23,
        "required": false
      },
      {
        "key": "minutely_enabled",
        "title": "启用分钟级天气",
        "description": "显示分钟级降水预报",
        "type": "boolean",
        "default": true,
        "required": false
      }
    ]
  }
}
